<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/signup.css">
    <title>SIGN UP</title>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="background">
        <form class="container" action="/signup" method="post">
            <input type="text" name="name" id="nameInput" placeholder="name">
            <input type="text" name="email" id="emailInput" placeholder="example@gamil.com">
            <input type="text" name="password" id="passwordInput" placeholder="password">
            <button type="submit">Go</button>
        </form>
    </div>

    <%- include('partials/navLink') %>
    <script src="scripts/signup.js"></script>
    <% if (typeof error !== 'undefined' && error) { %>
        <script>
            errorOutput('<%=error%>');
        </script> 
    <% } %>
</body>
</html>